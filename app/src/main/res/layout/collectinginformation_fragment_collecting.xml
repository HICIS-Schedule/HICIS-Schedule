<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1abc9c"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="csc.colleguescheduller.Views.CollectingInformation.Fragment_success">

    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_img_guideline_left" app:layout_constraintGuide_percent=".20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_img_guideline_right" app:layout_constraintGuide_percent=".80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_img_guideline_top" app:layout_constraintGuide_percent=".15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_img_guideline_bottom"  app:layout_constraintGuide_percent=".45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_robot_loading"
        android:scaleType="fitCenter"
        android:id="@+id/fragmen_witingtime_image"
        app:layout_constraintStart_toEndOf="@id/fragment_watingtime_img_guideline_left"
        app:layout_constraintEnd_toStartOf="@id/fragment_watingtime_img_guideline_right"
        app:layout_constraintTop_toBottomOf="@id/fragment_watingtime_img_guideline_top"
        app:layout_constraintBottom_toTopOf="@id/fragment_watingtime_img_guideline_bottom"/>


    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_txt1_guideline_start" app:layout_constraintGuide_percent=".235"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_txt1_guideline_top" app:layout_constraintGuide_percent=".55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLLECTING
INFORMATION"
        android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/fragment_watingtime_txt1_guideline_start"
            app:layout_constraintTop_toBottomOf="@id/fragment_watingtime_txt1_guideline_top"
            />

    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_txt2_guideline_start" app:layout_constraintGuide_percent=".325"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_txt2_guideline_top" app:layout_constraintGuide_percent=".75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

   <LinearLayout
       android:layout_width="wrap_content"
       android:orientation="vertical"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toEndOf="@id/fragment_watingtime_txt2_guideline_start"
       app:layout_constraintTop_toBottomOf="@id/fragment_watingtime_txt2_guideline_top"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="Are you ready?"
           android:textColor="@android:color/white"
           android:textSize="18sp"
           android:textStyle="bold"

           />
       <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:layout_gravity="center"
           android:background="@android:color/white"

           />

   </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_txt4_guideline_start" app:layout_constraintGuide_percent=".10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_txt4_guideline_top" app:layout_constraintGuide_percent=".82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thank you for your patience, and now you
are ready to complete your information "
            android:textColor="@android:color/white"
            android:textSize="14.3sp"
            app:layout_constraintStart_toEndOf="@id/fragment_watingtime_txt4_guideline_start"
            app:layout_constraintTop_toBottomOf="@id/fragment_watingtime_txt4_guideline_top"

            />

    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_txt5_guideline_start" app:layout_constraintGuide_percent=".33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_txt5_guideline_top" app:layout_constraintGuide_percent=".94"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:gravity="center"
            android:text="just follow me"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/fragment_watingtime_txt5_guideline_start"
            app:layout_constraintTop_toBottomOf="@id/fragment_watingtime_txt5_guideline_top"

            />








</android.support.constraint.ConstraintLayout>
