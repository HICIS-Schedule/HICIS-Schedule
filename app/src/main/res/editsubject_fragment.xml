<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline  android:id="@+id/addsubject_top" app:layout_constraintGuide_percent="0.02357564"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
    <android.support.constraint.Guideline android:id="@+id/addsubject_start" app:layout_constraintGuide_percent="0.07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT SUPJECT"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/app_background"
        app:layout_constraintStart_toEndOf="@id/addsubject_start"
        app:layout_constraintTop_toBottomOf="@id/addsubject_top"
        />


    <android.support.constraint.Guideline android:id="@+id/addsubject_general_start" app:layout_constraintGuide_percent="0.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/addsubject_general_end" app:layout_constraintGuide_percent="0.88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


    <android.support.constraint.Guideline android:id="@+id/addsubject_edt_txt_id_top" app:layout_constraintGuide_percent="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/addsubject_edt_txt_id_top"
        app:layout_constraintStart_toEndOf="@id/addsubject_general_start"
        app:layout_constraintEnd_toStartOf="@id/addsubject_general_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="15sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="12356565"
            android:textColor="@android:color/black"
            android:textSize="17sp" />
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/addsubject_edt_txt_name_top" app:layout_constraintGuide_percent="0.23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addsubject_edt_txt_name_top"
        app:layout_constraintStart_toEndOf="@id/addsubject_general_start"
        app:layout_constraintEnd_toStartOf="@id/addsubject_general_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mido"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            />
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/addsubject_txt3_name_arabic_top" app:layout_constraintGuide_percent="0.36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addsubject_txt3_name_arabic_top"
        app:layout_constraintStart_toEndOf="@id/addsubject_general_start"
        app:layout_constraintEnd_toStartOf="@id/addsubject_general_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name in Arabic"
            android:textSize="15sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تنانتاتاا"
            android:inputType="text"
            android:textSize="17sp"
            android:textColor="@android:color/black" />

    </LinearLayout>




    <android.support.constraint.Guideline android:id="@+id/addsubject_edt_type_top" app:layout_constraintGuide_percent="0.49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/addsubject_edt_type_top"
        app:layout_constraintStart_toEndOf="@id/addsubject_general_start"
        app:layout_constraintEnd_toStartOf="@id/addsubject_general_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/addsubject_sort_by_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/addsubject_txt4_no_section_practical_top" app:layout_constraintGuide_percent="0.62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/addsubject_general_start"
        app:layout_constraintEnd_toStartOf="@id/addsubject_general_end"
        app:layout_constraintTop_toBottomOf="@id/addsubject_txt4_no_section_practical_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Sectinos Practical"
            android:textSize="15sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5555555555555"
            android:inputType="number"
            android:textSize="17sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/addsubject_txt4_no_section_traning_top" app:layout_constraintGuide_percent="0.75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/addsubject_general_start"
        app:layout_constraintEnd_toStartOf="@id/addsubject_general_end"
        app:layout_constraintTop_toBottomOf="@id/addsubject_txt4_no_section_traning_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Sectinos Traning"
            android:textSize="15sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8888888888"
            android:textSize="17sp"
            android:inputType="number"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/addsubject_button_top" app:layout_constraintGuide_percent="0.915"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/addsubject_button_start" app:layout_constraintGuide_percent="0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/addsubject_button_bottom" app:layout_constraintGuide_percent="0.98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:textColor="@android:color/white"
        android:background="@color/app_background"
        app:layout_constraintTop_toBottomOf="@id/addsubject_button_top"
        app:layout_constraintStart_toEndOf="@id/addsubject_button_start"
        app:layout_constraintEnd_toStartOf="@id/addsubject_general_end"
        app:layout_constraintBottom_toTopOf="@id/addsubject_button_bottom"/>

    />

</android.support.constraint.ConstraintLayout>