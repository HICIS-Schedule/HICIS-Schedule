<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1abc9c"
    tools:context="csc.colleguescheduller.Views.CollectingInformation.Fragment_not_ready">

    <android.support.constraint.Guideline android:id="@+id/fragment_failed_img_guideline_left" app:layout_constraintGuide_percent=".20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_failed_img_guideline_right" app:layout_constraintGuide_percent=".80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_failed_img_guideline_top" app:layout_constraintGuide_percent=".15   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_failed_img_guideline_bottom"  app:layout_constraintGuide_percent=".45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_robot_unready"
        android:scaleType="fitCenter"
        android:id="@+id/fragmentfailed_image"
        app:layout_constraintStart_toEndOf="@id/fragment_failed_img_guideline_left"
        app:layout_constraintEnd_toStartOf="@id/fragment_failed_img_guideline_right"
        app:layout_constraintTop_toBottomOf="@id/fragment_failed_img_guideline_top"
        app:layout_constraintBottom_toTopOf="@id/fragment_failed_img_guideline_bottom"/>

        <android.support.constraint.Guideline android:id="@+id/fragment_failed_guideline_txt1_start"  app:layout_constraintGuide_percent="0.2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />
        <android.support.constraint.Guideline android:id="@+id/fragment_failed_guideline_txt1_top"  app:layout_constraintGuide_percent=".5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="system not raedy"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/fragment_failed_guideline_txt1_start"
            app:layout_constraintTop_toBottomOf="@id/fragment_failed_guideline_txt1_top"

            />

    <android.support.constraint.Guideline android:id="@+id/fragment_failed_guideline_txt2_start"  app:layout_constraintGuide_percent="0.345"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline android:id="@+id/fragment_failed_guideline_txt2_top"  app:layout_constraintGuide_percent=".62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />>
    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/fragment_failed_guideline_txt2_start"
        app:layout_constraintTop_toBottomOf="@id/fragment_failed_guideline_txt2_top"
        >

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_gravity="center"
            android:gravity="center"
            android:text="We are sorry!"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"

            />
            <View
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/white"
                />
        </LinearLayout>

        <android.support.constraint.Guideline android:id="@+id/fragment_failed_guideline_txt4_start"  app:layout_constraintGuide_percent="0.1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />
        <android.support.constraint.Guideline android:id="@+id/fragment_failed_guideline_txt4_top"  app:layout_constraintGuide_percent=".7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Our team work on the system in that
moment. Come back again in another time"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/fragment_failed_guideline_txt4_start"
            app:layout_constraintTop_toBottomOf="@id/fragment_failed_guideline_txt4_top"


            />


        <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_button_guideline_start" app:layout_constraintGuide_percent=".37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />
        <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_button_guideline_end"  app:layout_constraintGuide_percent=".631"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />
        <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_button_guideline_top"  app:layout_constraintGuide_percent=".896"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />
        <android.support.constraint.Guideline android:id="@+id/fragment_watingtime_button_guideline_bottom" app:layout_constraintGuide_percent=".998"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />
        <Button
            android:id="@+id/btn_fragment_faile"
            android:text="log out"
            android:background="@drawable/ic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:onClick="btn_CollectingFragment_LogOut"
            app:layout_constraintStart_toEndOf="@id/fragment_watingtime_button_guideline_start"
            app:layout_constraintEnd_toStartOf="@id/fragment_watingtime_button_guideline_end"
            app:layout_constraintTop_toBottomOf="@id/fragment_watingtime_button_guideline_top"
            app:layout_constraintBottom_toTopOf="@id/fragment_watingtime_button_guideline_bottom"



            />














</android.support.constraint.ConstraintLayout>
