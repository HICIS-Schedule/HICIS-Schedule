<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_start" app:layout_constraintGuide_percent=".05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_end" app:layout_constraintGuide_percent=".95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_1_top" app:layout_constraintGuide_percent=".03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_2_top" app:layout_constraintGuide_percent=".15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_3_top" app:layout_constraintGuide_percent=".25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_3_bottom" app:layout_constraintGuide_percent=".35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_3_end" app:layout_constraintGuide_percent=".65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_4_top" app:layout_constraintGuide_percent=".4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_4_bottom" app:layout_constraintGuide_percent=".83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_5_top" app:layout_constraintGuide_percent=".85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_5_bottom" app:layout_constraintGuide_percent=".98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/teachinginfo_gd_txtv_subjects_6_top" app:layout_constraintGuide_percent=".91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEACHING INFO"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/teachinginfo_gd_txtv_subjects_start"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_gd_txtv_subjects_1_top"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teaching Days"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/teachinginfo_gd_txtv_subjects_start"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_gd_txtv_subjects_2_top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="11sp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@id/teachinginfo_gd_txtv_subjects_end"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_gd_txtv_subjects_2_top"/>

    <LinearLayout
        android:id="@+id/teachinginfo_lyt_teachingdays"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/teachinginfo_gd_txtv_subjects_start"
        app:layout_constraintEnd_toStartOf="@id/teachinginfo_gd_txtv_subjects_3_end"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_gd_txtv_subjects_3_top"
        app:layout_constraintBottom_toBottomOf="@id/teachinginfo_gd_txtv_subjects_3_bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="sun"
            android:textAlignment="gravity"
            android:tag="SUNDAY"
            android:clickable="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="mon"
            android:gravity="center"
            android:textAlignment="gravity"
            android:tag="MONDAY"
            android:clickable="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="tue"
            android:gravity="center"
            android:textAlignment="gravity"
            android:tag="TUESDAY"
            android:clickable="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="wed"
            android:gravity="center"
            android:textAlignment="gravity"
            android:tag="WEDNESDAY"
            android:clickable="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="thu"
            android:gravity="center"
            android:textAlignment="gravity"
            android:tag="THURSDAY"
            android:clickable="true"/>

    </LinearLayout>


    <TextView
        android:id="@+id/teachinginfo_txtv_techingsubject_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teaching Subjects"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/teachinginfo_gd_txtv_subjects_start"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_gd_txtv_subjects_4_top"/>

    <TextView
        android:id="@+id/teachinginfo_txtv_techingsubject_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/4"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@id/teachinginfo_gd_txtv_subjects_end"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_gd_txtv_subjects_4_top"/>


    <TextView
        android:id="@+id/teachinginfo_txtv_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="1sp"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_txtv_techingsubject_1"/>

    <ListView
        android:id="@+id/teachinginfo_lstv_teachingsubjects"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_txtv_dummy"
        app:layout_constraintStart_toEndOf="@id/teachinginfo_gd_txtv_subjects_start"
        app:layout_constraintEnd_toStartOf="@id/teachinginfo_gd_txtv_subjects_end"
        app:layout_constraintBottom_toTopOf="@id/teachinginfo_gd_txtv_subjects_4_bottom"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toStartOf="@id/teachinginfo_lstv_teachingsubjects"
        app:layout_constraintEnd_toEndOf="@id/teachinginfo_lstv_teachingsubjects"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_lstv_teachingsubjects"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/teachinginfo_gd_txtv_subjects_start"
        app:layout_constraintEnd_toStartOf="@id/teachinginfo_gd_txtv_subjects_end"
        app:layout_constraintTop_toBottomOf="@id/teachinginfo_gd_txtv_subjects_5_top"
        app:layout_constraintBottom_toTopOf="@id/teachinginfo_gd_txtv_subjects_5_bottom">

        <Spinner
            android:id="@+id/teachinginfo_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75" />
        <Button android:id="@+id/teachinginfo_btn_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="ADD"
            android:background="@android:color/transparent"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>