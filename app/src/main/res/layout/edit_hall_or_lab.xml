<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.medo.testforgrad.AddHallOrLab">
    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_top" app:layout_constraintGuide_percent="0.025"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_start" app:layout_constraintGuide_percent="0.07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT HALL OR LAB"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/app_background"
        app:layout_constraintStart_toEndOf="@id/edit_hall_or_lab_start"
        app:layout_constraintTop_toBottomOf="@id/edit_hall_or_lab_top"
        />

    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_edt_txt_id_top" app:layout_constraintGuide_percent="0.13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_edt_txt_id_start" app:layout_constraintGuide_percent="0.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_edt_txt_id_end" app:layout_constraintGuide_percent="0.88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/edit_hall_or_lab_edt_txt_id_top"
        app:layout_constraintStart_toEndOf="@id/edit_hall_or_lab_edt_txt_id_start"
        app:layout_constraintEnd_toStartOf="@id/edit_hall_or_lab_edt_txt_id_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="15sp"
            />


        <EditText android:id="@+id/edit_hall_or_lab_id_edittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12356565"
            android:textSize="13sp"
            android:inputType="number"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_spinner_1_top" app:layout_constraintGuide_percent="0.31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/edit_hall_or_lab_spinner_1_top"
        app:layout_constraintStart_toEndOf="@id/edit_hall_or_lab_edt_txt_id_start"
        app:layout_constraintEnd_toStartOf="@id/edit_hall_or_lab_edt_txt_id_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="15sp"
            />
        <Spinner android:id="@+id/edit_hall_or_sort_by_spinner_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_edt_txt_capacity_top" app:layout_constraintGuide_percent="0.45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/edit_hall_or_lab_edt_txt_capacity_top"
        app:layout_constraintStart_toEndOf="@id/edit_hall_or_lab_edt_txt_id_start"
        app:layout_constraintEnd_toStartOf="@id/edit_hall_or_lab_edt_txt_id_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="capcity"
            android:textSize="15sp"
            />
        <EditText android:id="@+id/edit_hall_or_lab_capacity_edittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12356565"
            android:textSize="13sp"
            android:inputType="number"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_edt_txt_spinner_2_top" app:layout_constraintGuide_percent="0.65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/edit_hall_or_lab_edt_txt_spinner_2_top"
        app:layout_constraintStart_toEndOf="@id/edit_hall_or_lab_edt_txt_id_start"
        app:layout_constraintEnd_toStartOf="@id/edit_hall_or_lab_edt_txt_id_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="15sp"
            />
        <Spinner android:id="@+id/edit_hall_or_sort_by_spinner_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_button_top" app:layout_constraintGuide_percent="0.83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_button_start" app:layout_constraintGuide_percent="0.72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_button_end" app:layout_constraintGuide_percent="0.88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/edit_hall_or_lab_button_bottom" app:layout_constraintGuide_percent="0.94"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <Button android:id="@+id/edit_hall_or_lab_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:textColor="@android:color/white"
        android:background="@color/app_background"
        app:layout_constraintTop_toBottomOf="@id/edit_hall_or_lab_button_top"
        app:layout_constraintStart_toEndOf="@id/edit_hall_or_lab_button_start"
        app:layout_constraintEnd_toStartOf="@id/edit_hall_or_lab_button_end"
        app:layout_constraintBottom_toTopOf="@id/edit_hall_or_lab_button_bottom"/>

    />

</android.support.constraint.ConstraintLayout>
