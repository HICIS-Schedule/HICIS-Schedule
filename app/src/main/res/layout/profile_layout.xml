<?xml version="1.0" encoding="utf-8"?>

<!-- Ahmed Mokhtar Hassanin -->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline android:id="@+id/profile_gd_lyt_1" app:layout_constraintGuide_percent=".4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/profile_gd_lyt_2" app:layout_constraintGuide_percent=".93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/app_background_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profile_gd_lyt_1">

        <android.support.constraint.Guideline android:id="@+id/profile_gd_txtv_start" app:layout_constraintGuide_percent=".05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <android.support.constraint.Guideline android:id="@+id/profile_gd_txtv_1_top" app:layout_constraintGuide_percent=".048"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/profile_gd_txtv_1_top"
            app:layout_constraintStart_toEndOf="@id/profile_gd_txtv_start">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERAL INFO  "
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filed by admin"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_gravity="bottom"/>
        </LinearLayout>

        <android.support.constraint.Guideline android:id="@+id/profile_gd_txtv_2_top" app:layout_constraintGuide_percent=".18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/profile_gd_txtv_start"
            app:layout_constraintTop_toBottomOf="@id/profile_gd_txtv_2_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/profile_title"
                android:textSize="12sp"/>

            <TextView android:id="@+id/profile_txtv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="D12445"/>
        </LinearLayout>

        <android.support.constraint.Guideline android:id="@+id/profile_gd_txtv_3_top" app:layout_constraintGuide_percent=".38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/profile_gd_txtv_start"
            app:layout_constraintTop_toBottomOf="@id/profile_gd_txtv_3_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@color/profile_title"
                android:textSize="12sp"/>

            <TextView android:id="@+id/profile_txtv_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="Mohammed Ahmed Mahmoud"/>
        </LinearLayout>

        <android.support.constraint.Guideline android:id="@+id/profile_gd_txtv_4_top" app:layout_constraintGuide_percent=".58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <android.support.constraint.Guideline android:id="@+id/profile_gd_txtv_4_start" app:layout_constraintGuide_percent=".5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/profile_gd_txtv_start"
            app:layout_constraintTop_toBottomOf="@id/profile_gd_txtv_4_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scientific Degree"
                android:textColor="@color/profile_title"
                android:textSize="12sp"/>

            <TextView android:id="@+id/profile_txtv_scientificdegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="Professor Doctor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/profile_gd_txtv_4_start"
            app:layout_constraintTop_toBottomOf="@id/profile_gd_txtv_4_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiring Degree"
                android:textColor="@color/profile_title"
                android:textSize="12sp"/>

            <TextView android:id="@+id/profile_txtv_hiringdegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="Head of Department"/>
        </LinearLayout>

        <android.support.constraint.Guideline android:id="@+id/profile_gd_txtv_5_top" app:layout_constraintGuide_percent=".78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/profile_gd_txtv_start"
            app:layout_constraintTop_toBottomOf="@id/profile_gd_txtv_5_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Hours"
                android:textColor="@color/profile_title"
                android:textSize="12sp"/>

            <TextView android:id="@+id/profile_txtv_workhours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/profile_gd_txtv_4_start"
            app:layout_constraintTop_toBottomOf="@id/profile_gd_txtv_5_top">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiring Date"
                android:textColor="@color/profile_title"
                android:textSize="12sp"/>

            <TextView android:id="@+id/profile_txtv_hiringdegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="18/3/2010"/>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

    <FrameLayout android:id="@+id/profile_fragment_teachinginfo"
        layout="@layout/teachinginfo_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_gd_lyt_1"
        app:layout_constraintBottom_toTopOf="@id/profile_gd_lyt_2"/>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_gd_lyt_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/app_background">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:text="SEND" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>