<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.medo.testforgrad.AddHallOrLab">
    <android.support.constraint.Guideline android:id="@+id/add_hall_or_lab_top" app:layout_constraintGuide_percent="0.025"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/add_hall_or_lab_start" app:layout_constraintGuide_percent="0.07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HALL AND LAB DETAILED"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/app_background"
        app:layout_constraintStart_toEndOf="@id/add_hall_or_lab_start"
        app:layout_constraintTop_toBottomOf="@id/add_hall_or_lab_top"
        />

    <android.support.constraint.Guideline android:id="@+id/hall_or_lab_detailed_id_txt_id_top" app:layout_constraintGuide_percent="0.13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/hall_or_lab_detailed_id_txt_start" app:layout_constraintGuide_percent="0.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/hall_or_lab_detailed_id_txt_end" app:layout_constraintGuide_percent="0.88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/hall_or_lab_detailed_id_txt_id_top"
        app:layout_constraintStart_toEndOf="@id/hall_or_lab_detailed_id_txt_start"
        app:layout_constraintEnd_toStartOf="@id/hall_or_lab_detailed_id_txt_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="15sp"
            />
        <TextView android:id="@+id/hall_or_lab_detailed_id_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12356565"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/hall_or_lab_detailed_type_txt_top" app:layout_constraintGuide_percent="0.28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/hall_or_lab_detailed_type_txt_top"
        app:layout_constraintStart_toEndOf="@id/hall_or_lab_detailed_id_txt_start"
        app:layout_constraintEnd_toStartOf="@id/hall_or_lab_detailed_id_txt_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="15sp"
            />
        <TextView android:id="@+id/hall_or_lab_detailed_type_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:text="222222"/>
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/hall_or_lab_detailed_capacity_txt_top" app:layout_constraintGuide_percent="0.43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/hall_or_lab_detailed_capacity_txt_top"
        app:layout_constraintStart_toEndOf="@id/hall_or_lab_detailed_id_txt_start"
        app:layout_constraintEnd_toStartOf="@id/hall_or_lab_detailed_id_txt_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="capcity"
            android:textSize="15sp"
            />
        <TextView android:id="@+id/hall_or_lab_detailed_capacity_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12356565"
            android:textSize="13sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/hall_or_lab_detailed_status_txt_top" app:layout_constraintGuide_percent="0.58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/hall_or_lab_detailed_status_txt_top"
        app:layout_constraintStart_toEndOf="@id/hall_or_lab_detailed_id_txt_start"
        app:layout_constraintEnd_toStartOf="@id/hall_or_lab_detailed_id_txt_end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="15sp"
            />
        <TextView android:id="@+id/hall_or_lab_detailed_status_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12356565"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
